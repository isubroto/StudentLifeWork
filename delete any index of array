#include<iostream>
using namespace std;
int main()
{
	int arr[100];
	int a, b;
	cout << "Input the size of array : ";
	cin >> a;
	for (int i = 0; i < a; i++)
	{
		cin >> arr[i];
	}
	cout << "Input The Index Number Where You Delete The Number";
	cin >> b;
	for (int i = b; i < a; i++)
	{
		arr[i] = arr[i + 1];
	}
	for (int i = 0; i < a; i++)
	{
		cout << arr[i] << "\t";
	}
}
